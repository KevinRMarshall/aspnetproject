@model IEnumerable<OnlineGameStore.Models.CreditCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="page" style="background: white;   margin-top: 25px; margin-bottom: 20px;">

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpireDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardHolder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Account)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProvinceState)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardHolder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.AspuserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardType.CardType1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProvinceState.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CreditId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CreditId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CreditId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>