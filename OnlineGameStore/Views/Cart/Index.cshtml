@model IEnumerable<OnlineGameStore.Models.Cart>

@{
    ViewData["Title"] = "Index";
}
<div class="page" style="background: white;   margin-top: 25px; margin-bottom: 20px;">

    <h1>Cart</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Account)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.AspuserId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CartId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CartId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>